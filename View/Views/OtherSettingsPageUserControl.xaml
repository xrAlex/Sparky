<UserControl x:Class="View.Views.OtherSettingsPageUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="410" d:DesignWidth="350"
             DataContext ="{Binding MainWindowViewModel, Source={StaticResource Locator}}"
             Background="Transparent">
    <Grid>
        <StackPanel Orientation="Vertical">
            <CheckBox
                Style="{StaticResource SliderCheckBox}"
                Content="{DynamicResource Loc_AutoLaunch}"
                IsChecked="{Binding LaunchOnStartup, Mode=TwoWay}"/>
            <CheckBox
                Style="{StaticResource SliderCheckBox}"
                IsChecked="{Binding ExtendedGammaRange, Mode=TwoWay}"
                Content="{DynamicResource Loc_ExtendedGammaRange}" Margin="0,10,0,0"/>
            <CheckBox
                Style="{StaticResource SliderCheckBox}"
                IsChecked="{Binding SmoothGammaChange, Mode=TwoWay}"
                Content="{DynamicResource Loc_SmoothBrightnessChange}" Margin="0,10,9,0"/>
        </StackPanel>
    </Grid>
</UserControl>